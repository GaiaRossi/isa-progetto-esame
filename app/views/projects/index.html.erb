<div class="row">
  <div class="col">
    <p style="color: green"><%= notice %></p>
  </div>
</div>
<div class="row">
  <div class="col">
    <% if flash[:error] %>
      <div class="error"><%= flash[:error] %></div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <h1>Projects</h1>
  </div>
</div>

<div id="projects">
  <% @projects.each do |project| %>
    <%= render project %>
    <div class="row">
      <div class="col">
        <%= link_to "Show this project", project, class: 'btn btn-outline-dark' %>
      </div>
    </div>
  <% end %>
</div>

<% if current_user.is_admin? %>
<div class="row">
  <div class="col">
    <%= link_to "New project", new_project_path, class: 'btn btn-dark' %>
  </div>
</div>
<% end %>
