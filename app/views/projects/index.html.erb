<p style="color: green"><%= notice %></p>
<% if flash[:error] %>
  <div class="error"><%= flash[:error] %></div>
<% end %>

<h1>Projects</h1>

<div id="projects">
  <% @projects.each do |project| %>
    <%= render project %>
    <p>
      <%= link_to "Show this project", project %>
    </p>
  <% end %>
</div>

<% if current_user.is_admin? %>
  <%= link_to "New project", new_project_path %>
<% end %>
