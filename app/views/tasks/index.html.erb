<div class="row">
  <div class="col">
    <p style="color: green"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col">
    <h1>Tasks</h1>
  </div>
</div>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <div class="row">
      <div class="col">
        <%= link_to "Show this task", task, class: 'btn btn-outline-dark' %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col">
    <%= link_to "New task", new_task_path, class: 'btn btn-dark' %>
  </div>
</div>
