<div class="login">
  <div class="row">
    <div class="col">
      <h1>Login page</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% if flash[:notice] %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:error] %>
        <div class="error"><%= flash[:error] %></div>
      <% end %>
    </div>
  </div>

 <%= form_with model: @user, url: user_sessions_path do |form| %>
  <div class="row">
    <div class="col">
      <%= form.label :username %><br>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.text_field :username %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.label :password %><br>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form.password_field :password %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p>
        <%= form.submit 'Login' %>
      </p>
    </div>
  </div>
</div>
<% end %>
